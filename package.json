{
  "name": "edge-react-hooks",
  "version": "2.0.3",
  "keywords": [
    "edge",
    "hooks",
    "react"
  ],
  "repository": "wolverineks/edge-react-hooks",
  "author": "Kevin Sullivan <wolverine.ks@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && mkdir dist && rollup -c",
    "flow": "node_modules/.bin/flow",
    "flow-coverage": "flow-coverage-report",
    "format": "sort-package-json && import-sort -l --write '*.js' 'src/**/*.js' && eslint --fix '*.js' 'src/**/*.js' && prettier --write --list-different '*.js' 'src/**/*.js'",
    "precommit": "yarn format && yarn flow && yarn build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "react-use-async": "^0.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "edge-core-js": "^0.15.3",
    "eslint": "^5.12.1",
    "eslint-config-eslint": "^5.0.1",
    "eslint-config-react-app": "^3.0.6",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^0.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.93.0",
    "flow-coverage-report": "^0.6.1",
    "flow-typed": "^2.5.1",
    "husky": "^1.3.1",
    "import-sort-cli": "^5.2.0",
    "import-sort-parser-babylon": "^5.2.0",
    "import-sort-style-module": "^5.0.0",
    "prettier-eslint-cli": "^4.7.1",
    "react-testing-library": "^5.9.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-flow-entry": "^0.2.1",
    "sort-package-json": "^1.18.0"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "flow-coverage-report": {
    "globIncludePatterns": [
      "src/**/*.js"
    ],
    "reportTypes": [
      "text",
      "html",
      "json"
    ]
  },
  "importSort": {
    ".js, .es": {
      "parser": "babylon",
      "style": "module"
    }
  }
}
