{
  "name": "edge-react-hooks",
  "version": "2.0.4",
  "keywords": [
    "edge",
    "hooks",
    "react"
  ],
  "repository": "wolverineks/edge-react-hooks",
  "license": "MIT",
  "author": "Kevin Sullivan <wolverine.ks@gmail.com>",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "fix": "yarn sort-package-json && yarn lint",
    "format": "sort-package-json && prettier --write --list-different '*.js' 'src/**/*.ts'",
    "lint": "yarn eslint ./src --fix",
    "precommit": "yarn format && yarn build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "react-use-async": "^0.0.16"
  },
  "devDependencies": {
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "edge-core-js": "^0.17.1",
    "eslint": "^7.0.0",
    "eslint-config-eslint": "^6.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "sort-package-json": "^1.42.2",
    "typescript": "^3.9.2"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
